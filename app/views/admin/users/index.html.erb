<h1>管理画面ユーザー一覧<h1>
<table class="table table-bordered">
<%= link_to '新規ユーザー登録', new_admin_user_path %>
<%= link_to 'タスク一覧画面へ戻る', tasks_path %></td>

  <thead>
    <tr>
      <th>User_ID</th>
      <th>ユーザー名</th>
      <th>管理者</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="user_name">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.admin %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to '詳細', admin_user_path(user.id) %>
        <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
        <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
   <% end %>
  </tbody>
</table> 